extends main

block content
  h1
  form(method='POST' action='' autocomplete="on")
    div.form-group
      label(for='email') Login:
      input#login.form-control(type='text' placeholder='email@example.com' name='user[email]' required='true'  autocomplete='username')
    div.form-group
      label(for='password') Password:
      input#password.form-control(type='password' placeholder='***********' name='user[password]' required='true'  autocomplete='current-password')
    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg